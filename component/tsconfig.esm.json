{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "./dist/esm",
		"rootDir": "./src",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": false,
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"lib": ["DOM", "ESNext"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
